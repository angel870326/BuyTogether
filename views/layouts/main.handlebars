<!-- ./views/layouts/main.handlebars -->
<html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Buy Together</title>
  <link rel="stylesheet" href="/stylesheets/bootstrap.css">
  <link rel="stylesheet" href="/stylesheets/css/all.css">
  <link rel="stylesheet" href="/stylesheets/main.css">
  {{#if indexCSS}}
  <link rel="stylesheet" href="/stylesheets/index.css">
  {{/if}}
  {{#if postFormCSS}}
  <link rel="stylesheet" href="/stylesheets/new.css">
  {{/if}}
  {{#if adCSS}}
  <link rel="stylesheet" href="/stylesheets/ad.css">      <!-- ad -->
  {{/if}}
  {{#if userCSS}}
  <link rel="stylesheet" href="/stylesheets/user.css">
  {{/if}}
  {{#if todoFormCSS}}
  <link rel="stylesheet" href="/stylesheets/todo_form.css">
  {{/if}}
  {{#if detailCSS}}
  <link rel="stylesheet" href="/stylesheets/detail.css">
  {{/if}}
  {{#if errorCSS}}
  <link rel="stylesheet" href="/stylesheets/error.css">
  {{/if}}
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.2/animate.min.css">
</head>

<body>
  <div class="overlay"></div>

  <!--Navbar-->
  
  <nav class="navbar position-relative">
    <a href="/" class="navbar-brand logo font-weight-bolder">Buy Together</a> 

    <ul class="navbar-nav d-flex flex-row">

      <!-- 有登入 -->
      {{#if user}}

      <!-- New Group -->
      <li class="nav-item">
        <a href="/posts/new" class="new-task-btn"><i class="fas fa-plus py-1"></i><span
            class="ml-1 d-md-inline add-bar">New Group</span></a>
      </li>

      <!-- Account (user.Fname) -->
      <i class="nav-item">
        <a href="/users/{{user.id}}" class="new-task-btn"><i class="fas fa-user-circle py-1"></i><span
            class="ml-1 d-md-inline add-bar">{{user.Fname}}</span></a>                                             {{!-- {{改：Account 的 link}} --}}
      </i>

      <!-- Log out -->
      <i class="nav-item">
        <a href="/users/logout" class="log-out-btn"><i class="fas fa-sign-out-alt py-1"></i><span
            class="ml-1 d-md-inline add-bar">Log out</span></a>
      </i>

      {{!--
      {{<li class="nav-item ml-3">
        <a href="/users/logout" class="log-out-btn">Log out</a>
      </li>}}
      --}}


      <!-- 未登入 -->
      {{else}}

      <!-- Ad -->
      <li class="nav-item">
        <a href="/posts/ad" class="new-task-btn"><i class="fas fa-plus py-1"></i><span
            class="ml-1 d-none d-md-inline add-bar">Ad</span></a>  

      <!-- Login -->
      </li>
      <i class="nav-item">
        <a href="/users/login" class="log-out-btn"><i class="fas fa-sign-in-alt py-1"></i><span
            class="ml-1 d-md-inline add-bar">Login</span></a>
      </i>

      {{!--
      {{<li class="nav-item ml-3">
        <a href="/users/login" class="log-out-btn">Login</a>
      </li>}}
      --}}

      {{/if}}     
    </ul>
  </nav>

  {{{body}}}

  <script src="/javascripts/popper.min.js"></script>
  <script src="/javascripts/jquery-3.4.1.js"></script>
  <script src="/javascripts/bootstrap.js"></script>
  {{#if formValidation}}
  <script src="/javascripts/form-validation.js"></script>
  {{/if}}
  {{#if hasAnimation}}
  <script src="/javascripts/animation-control.js"></script>
  {{/if}}
</body>

</html>