<!--New todo-->
<section id="display-container" class="position-relative rounded shadow">
  <div class="rounded" id="display-panel">
    <h3 class="text-center pt-3"><u>New Group</u></h3>
    <!--Flash message-->
    {{> messages}}

    <form action="/posts/new" method="post" class="pt-3 needs-validation" novalidate>
      <!--CSRF token-->
      <input type="hidden" name="_csrf" value="{{csrfToken}}">
      <!--Form-->
      <!--Title-->
      <div class="form-group mt-2">
        <small class="tool-tip name-tip">Title</small>
        <label for="title" class="sr-only">New Post</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="Enter new title" minlength="1"
          value="{{post.title}}" required>
        <div class="invalid-feedback">
          Please fill in!
        </div>
      </div>
      <div class="form-row">
        <!-- Number of People -->
        <div class="col-md-4 col-sm-12 tool-tip-container animateField">
          <small class="tool-tip date-tip">Number of People</small>
          <label for="numberOfPeople" class="sr-only">Number of People</label>
          <input type="number" class="form-control pr-1" id="numberOfPeople" name="numberOfPeople"
            value="{{post.numberOfPeople}}" required>
          <div class="invalid-feedback">
            Please fill in!
          </div>
        </div>
        <!--category-->
        <div class="col-md-4 col-sm-12 tool-tip-container animateField">
          <small class="tool-tip date-tip">Category</small>
          <label for="category" class="sr-only">Category</label>
          <select class="form-control" id="category" name="category">
            <option value="food">食物</option>
            <option value="necessity">日用品</option>
            <option value="other">其他</option>
          </select>
          <div class="invalid-feedback">
            Please fill in!
          </div>
        </div>
        <!--Due Date-->
        <div class="col-md-4 col-sm-12 tool-tip-container animateField">
          <small class="tool-tip date-tip">Due Date</small>
          <label for="dueDate" class="sr-only">Due Date</label>
          <input type="date" class="form-control pr-1" id="dueDate" name="dueDate" value="{{post.dueDate}}"
            min="2020-12-01" max="2025-12-31" required>
          <div class="invalid-feedback">
            Please fill in!
          </div>
        </div>
      </div>
      <!--Content-->
      <div class="form-group mt-2">
        <small class="tool-tip name-tip">Content</small>
        <label for="content" class="sr-only">Content</label>
        <textarea class="form-control" name="content" id="content" rows="3" placeholder="Give some description here..."
          maxlength="60">{{post.content}}</textarea>
      </div>
      <!--Status-->
      <!--
      <div class="btn-group btn-group-toggle mb-3 d-flex pt-1 tool-tip-container" data-toggle="buttons">
        <small class="tool-tip status-tip">Current Status</small>
        <label class="btn btn-sm btn-secondary {{#if todo.done}}active{{/if}}">
          <input type="radio" name="status" id="done" value="done" autocomplete="off" {{#if
            todo.done}}checked{{/if}}>Done
        </label>
        <label class="btn btn-sm btn-secondary {{#if todo.notDone}}active{{/if}}">
          <input type="radio" name="status" id="notDone" value="notDone" autocomplete="off" {{#if
            todo.notDone}}checked{{/if}}>Undone
        </label>
      </div>
      -->
      <hr>
      <button type="submit" class="btn btn-block todo-submit">Submit</button>
    </form>
  </div>
</section>